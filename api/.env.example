# ===================
# API Keys & Endpoints (Required)
# ===================
GROQ_API_KEY=<your-groq-api-key>
QDRANT_API_KEY=<your-qdrant-api-key>
QDRANT_ENDPOINT=<your-qdrant-endpoint>

# ===================
# LLM Settings
# ===================
GROQ_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=512

# ===================
# Embedding Settings
# ===================
EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5
EMBEDDING_DIM=768

# ===================
# Vector Database Settings
# ===================
QDRANT_COLLECTION=acl-anthology
QDRANT_TIMEOUT=60

# ===================
# Retrieval Pipeline Settings
# ===================
NUM_REFORMULATED_QUERIES=3
SEARCH_K_MULTIPLIER=2

# ===================
# Result Aggregation Settings (RRF)
# ===================
RRF_K=60
RRF_SCORE_WEIGHT=0.3

# ===================
# Ingestion Settings
# ===================
EMBEDDING_BATCH_SIZE=4
